#  Firefox
super + shift + z
    bash ~/.config/sxhkd/alerts/firefox.sh

#  Files / Gnome Files
super + shift + x
    bash ~/.config/sxhkd/alerts/files.sh
 
#  Code
super + shift + c
    bash ~/.config/sxhkd/alerts/code.sh

#  Terminal emulator
super + Return
    kitty

